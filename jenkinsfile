  
pipeline {
   agent any

   stages {
      stage('Verify Branch') {
         steps {
            echo "$GIT_BRANCH"
         }
      }
      stage('Docker Build') {
         steps {
            sh(script: """
               cd simple_api/
               docker build -t layar/studentlistimage .
               cd ..
            """)
         }
      }
      stage('Push container'){
          steps{
              dir("$WORKSPACE/simple_api"){
                 script{
                    docker.withRegistry('https://index.docker.io/v1/ ', 'dockerhub') {
                    def image = docker.build('layar/repositorie1:latest')
                    image.push()
                    }
              }
              }
          }
}
stage(' app Deploy'){
      steps{
   stage(' app Deploy'){
      steps{
   ansiblePlaybook credentialsId: '58c6beae-3bdb-4155-962e-d4fc1edbc687', installation: 'ansible', inventory: 'dev.inv', playbook: ''
}


  }
      }
      }
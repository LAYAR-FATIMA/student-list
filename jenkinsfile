  
pipeline {
   agent any

   stages {
      stage('Verify Branch') {
         steps {
            echo "$GIT_BRANCH"
         }
      }
      stage('Docker Build') {
         steps {
            sh(script: """
               cd simple_api/
               docker build -t layar/studentlistimage .
               cd ..
            """)
         }
      }
      stage('Push container'){
          steps{
              dir("$WORKSPACE/simple_api"){
                 script{
                    docker.withRegistry('https://index.docker.io/v1/ ', 'dockerhub') {
                    def image = docker.build('layar/repositorie1:latest')
                    image.push()
                    }
              }
              }
          }
}
stage(' app Deploy'){
      steps{
    ansiblePlaybook credentialsId: 'ab53c0ec-49d8-445c-8a08-8bf8291e45d2', disableHostKeyChecking: true, installation: 'ansible', inventory: 'dev.inv', playbook: 'playbook.yml'
  }
      }
      }
       }
